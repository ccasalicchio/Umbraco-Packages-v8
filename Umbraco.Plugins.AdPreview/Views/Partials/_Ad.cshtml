@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Newtonsoft.Json;
@{
    var adData = Model.Content.GetPropertyValue<string>("imageAd");
    Umbraco.Plugins.AdPreview.Models.AdViewModel ad = !string.IsNullOrEmpty(adData) ? JsonConvert.DeserializeObject<Umbraco.Plugins.AdPreview.Models.AdViewModel>(adData) : null;
}
@if (ad != null && !string.IsNullOrEmpty(ad.Img))
{
    <div class="ad-wrapper">
        <a href="@ad.Url" target="_blank" title="@ad.Tooltip">
            <div class="image-ad">
                <img src="@ad.Img" alt="@(ad.Title + " - " + ad.Description)" />
            </div>
            @if (ad.Overlay)
            {
                <div class="ad-text @ad.Css">
                    <h3>@ad.Title</h3>
                    <p>@ad.Description</p>
                </div>
            }
        </a>
    </div>
}